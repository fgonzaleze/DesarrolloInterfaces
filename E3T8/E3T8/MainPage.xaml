<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="E3T8.MainPage">

    <VerticalStackLayout>

        <AbsoluteLayout>
            <BoxView Color="Red"
                 AbsoluteLayout.LayoutBounds="0, 0, 150, 150" />
            <BoxView Color="Blue"
                 AbsoluteLayout.LayoutBounds="150, 0, 300, 150" />
            <BoxView Color="Green"
                 AbsoluteLayout.LayoutBounds="0, 150, 450, 150" />
            <BoxView Color="Yellow"
                 AbsoluteLayout.LayoutBounds=".9,0.5,.5,1" 
                 AbsoluteLayout.LayoutFlags="All"/>
        </AbsoluteLayout>
    </VerticalStackLayout>

</ContentPage>
